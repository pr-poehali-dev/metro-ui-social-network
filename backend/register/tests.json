{
  "tests": [
    {
      "name": "Valid registration",
      "method": "POST",
      "path": "/",
      "body": {
        "username": "testuser123",
        "password": "testpass123"
      },
      "expectedStatus": 201,
      "expectedBody": {
        "success": true,
        "user": {
          "username": "string",
          "role": "string"
        }
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Short username",
      "method": "POST",
      "path": "/",
      "body": {
        "username": "ab",
        "password": "testpass"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Missing credentials",
      "method": "POST",
      "path": "/",
      "body": {},
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "CORS preflight",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200
    }
  ]
}
